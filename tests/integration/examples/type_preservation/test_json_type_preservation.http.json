{
    "fixtures": ["server"],
    "vars": {
        "api_base": "http://localhost:5000"
    },
    "stages": [
        {
            "name": "save_different_types",
            "request": {
                "url": "{api_base}/save_values",
                "method": "POST"
            },
            "response": {
                "save": {
                    "vars": {
                        "saved_int": "int_value",
                        "saved_float": "float_value",
                        "saved_bool": "bool_value",
                        "saved_string": "string_value",
                        "saved_list": "list_value",
                        "saved_dict": "dict_value"
                    }
                },
                "verify": {
                    "status": 200
                }
            }
        },
        {
            "name": "test_preserved_types_in_json_body",
            "request": {
                "url": "{api_base}/echo_json",
                "method": "POST",
                "body": {
                    "json": {
                        "int_field": "{saved_int}",
                        "float_field": "{saved_float}",
                        "bool_field": "{saved_bool}",
                        "string_field": "{saved_string}",
                        "list_field": "{saved_list}",
                        "dict_field": "{saved_dict}"
                    }
                }
            },
            "response": {
                "save": {
                    "vars": {
                        "echoed_int": "int_field",
                        "echoed_float": "float_field",
                        "echoed_bool": "bool_field",
                        "echoed_string": "string_field"
                    }
                },
                "verify": {
                    "status": 200,
                    "vars": {
                        "echoed_int": 42,
                        "echoed_float": 3.14,
                        "echoed_bool": true,
                        "echoed_string": "hello"
                    }
                }
            }
        }
    ]
}