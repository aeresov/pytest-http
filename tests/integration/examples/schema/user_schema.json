{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "type": "object",
    "properties": {
        "id": {
            "type": "integer",
            "description": "User ID"
        },
        "name": {
            "type": "string",
            "description": "User name"
        },
        "email": {
            "type": "string",
            "format": "email",
            "description": "User email"
        },
        "age": {
            "type": "integer",
            "minimum": 0,
            "maximum": 150,
            "description": "User age"
        }
    },
    "required": ["id", "name", "email"],
    "additionalProperties": false
}