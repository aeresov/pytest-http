{
    "fixtures": [
        "server"
    ],
    "vars": {
        "api_base": "http://localhost:5000"
    },
    "stages": [
        {
            "name": "test_text_patterns_not_match",
            "request": {
                "url": "{api_base}/text-content",
                "method": "GET"
            },
            "response": {
                "verify": {
                    "status": 200,
                    "body": {
                        "not_matches": [
                            "Goodbye",
                            "error",
                            "failed"
                        ]
                    }
                }
            }
        },
        {
            "name": "test_json_no_error_patterns",
            "request": {
                "url": "{api_base}/json-response",
                "method": "GET"
            },
            "response": {
                "verify": {
                    "status": 200,
                    "body": {
                        "not_matches": [
                            "\"error\":",
                            "\"failed\":",
                            "\"status\":\\s*\"inactive\""
                        ]
                    }
                }
            }
        }
    ]
}