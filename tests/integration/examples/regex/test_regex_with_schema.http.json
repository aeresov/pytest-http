{
    "fixtures": [
        "server"
    ],
    "vars": {
        "api_base": "http://localhost:5000"
    },
    "stages": [
        {
            "name": "test_combined_schema_and_regex",
            "request": {
                "url": "{{ api_base }}/json-response",
                "method": "GET"
            },
            "response": {
                "verify": {
                    "status": 200,
                    "body": {
                        "schema": {
                            "type": "object",
                            "properties": {
                                "message": {
                                    "type": "string"
                                },
                                "id": {
                                    "type": "number"
                                },
                                "status": {
                                    "type": "string",
                                    "enum": [
                                        "active",
                                        "inactive"
                                    ]
                                }
                            },
                            "required": [
                                "message",
                                "id",
                                "status"
                            ]
                        },
                        "matches": [
                            "\"status\":\\s*\"active\""
                        ],
                        "not_matches": [
                            "error",
                            "failed"
                        ]
                    }
                }
            }
        }
    ]
}