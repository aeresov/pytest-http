{
    "fixtures": ["server"],
    "vars": {
        "api_base": "http://localhost:5000"
    },
    "flow": [
        {
            "name": "test_pattern_should_not_match_but_does",
            "request": {
                "url": "{{ api_base }}/error-response",
                "method": "GET"
            },
            "response": {
                "verify": {
                    "status": 400,
                    "body": {
                        "not_matches": [
                            "\"error\":",
                            "Invalid request"
                        ]
                    }
                }
            }
        }
    ]
}