{
    "fixtures": [
        "server"
    ],
    "vars": {
        "api_base": "http://localhost:5000"
    },
    "stages": [
        {
            "name": "test_substring_not_contains",
            "request": {
                "url": "{{ api_base }}/text-content",
                "method": "GET"
            },
            "response": {
                "verify": {
                    "status": 200,
                    "body": {
                        "not_contains": [
                            "Goodbye",
                            "error",
                            "failed",
                            "exception"
                        ]
                    }
                }
            }
        },
        {
            "name": "test_json_no_error_substrings",
            "request": {
                "url": "{{ api_base }}/json-response",
                "method": "GET"
            },
            "response": {
                "verify": {
                    "status": 200,
                    "body": {
                        "not_contains": [
                            "\"error\":",
                            "\"failed\":",
                            "\"status\": \"inactive\"",
                            "stacktrace"
                        ]
                    }
                }
            }
        }
    ]
}