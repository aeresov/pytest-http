{
    "fixtures": ["server"],
    "auth": "auth_functions:basic_auth",
    "vars": {
        "api_base": "http://localhost:5000"
    },
    "stages": [
        {
            "name": "test_with_scenario_auth",
            "request": {
                "url": "{api_base}/api/protected",
                "method": "GET"
            },
            "response": {
                "verify": {
                    "status": 200,
                    "body": {
                        "contains": ["protected data"]
                    }
                }
            }
        },
        {
            "name": "test_with_stage_auth_override",
            "request": {
                "url": "{api_base}/api/protected",
                "method": "GET",
                "auth": {
                    "function": "auth_functions:basic_auth_with_args",
                    "kwargs": {
                        "username": "user",
                        "password": "pass"
                    }
                }
            },
            "response": {
                "verify": {
                    "status": 200,
                    "body": {
                        "contains": ["protected data", "user"]
                    }
                }
            }
        }
    ]
}