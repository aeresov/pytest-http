{
    "fixtures": ["server"],
    "vars": {
        "api_base": "http://localhost:5000",
        "username": "user",
        "password": "pass"
    },
    "auth": {
        "function": "auth_functions:basic_auth_with_args",
        "kwargs": {
            "username": "{{ username }}",
            "password": "{{ password }}"
        }
    },
    "stages": [
        {
            "name": "test_scenario_auth_with_kwargs",
            "request": {
                "url": "{{ api_base }}/api/protected",
                "method": "GET"
            },
            "response": {
                "verify": {
                    "status": 200,
                    "body": {
                        "contains": ["protected data", "user"]
                    }
                }
            }
        },
        {
            "name": "test_stage_override_with_kwargs",
            "request": {
                "url": "{{ api_base }}/api/protected",
                "method": "GET",
                "auth": "auth_functions:basic_auth"
            },
            "response": {
                "verify": {
                    "status": 200,
                    "body": {
                        "contains": ["protected data", "user"]
                    }
                }
            }
        }
    ]
}