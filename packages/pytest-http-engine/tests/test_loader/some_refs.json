{
    "login": {
        "name": "Login and acquire session key",
        "request": {
            "url": "http://{{ api_base }}/login",
            "params": {
                "username": "{{ username }}",
                "auth": "{{ password }}"
            },
            "ssl": {
                "verify": false
            }
        },
        "save": {
            "vars": {
                "session_key": "User.SessionKey"
            }
        },
        "verify": {
            "status": 200
        }
    },
    "logout": {
        "name": "Logout with session key",
        "always_run": true,
        "request": {
            "url": "http://{{ api_base }}/logout",
            "headers": {
                "X-Session-Key": "{{ session_key }}"
            },
            "params": {
                "format": "json"
            },
            "ssl": {
                "verify": false
            }
        },
        "$ref": "more_refs.json#/ok"
    }
}